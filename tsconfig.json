{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "~*": ["./*"],
      "hc-react/*": ["./hankchiutw-react/src/*"]
    }
  },
  "include": ["hankchiutw-react/src/**/*", "hankchiutw-webcomponent/src/**/*"],
  "exclude": ["node_modules"]
}
